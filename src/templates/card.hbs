{{#each this}}
<div class="card__all--content">
  <article class='card__article'>
    <div class='card'>
      <div class='card__conteiner'>
        <img class='card__img' src='{{imageUrls.[0]}}' alt='{{title}}' />
      </div>
      <div class='card__name--price'>
        <h3 class='card__title'>{{title}}</h3>
        <div class='card__price'>
          {{#if isOnSale}}<span class='card__old-price'>{{oldPrice}} &#8364</span> {{/if}}
          <span class='card__new-price'>{{price}} &#8364</span>
        </div>
      </div>
    </div>
  </article>
  <ul class="card__poiter--list">
    <li class="card__poiter active__color"></li>
    <li class="card__poiter"></li>
    <li class="card__poiter"></li>
    <li class="card__poiter"></li>
  </ul>
</div>

{{/each}}