<div class='backdrop'>
    <div class='modal modal-card'>
        {{#each this}}
        <div class="modal-card-conteiner">
            <div class="modal-card--name isHibenTitelOne">
                <p class="modal-card--titel">{{this.title}}</p>
                <p class="modal-card--cod">Код товару | {{this._id}}</p>
            </div>
            <div class="modal-card--imgContiner">
                <div class="modal-card--img">
                    <img class="modal-card--imgCard" src="{{this.imageUrls.[0]}}" alt="картинка">
                </div>
                <div>
                    <ul class="modal-card--list">
                        {{#each imageUrls}}
                        <li class="modal-card--poiner">
                            <img class="modal-card--imgPreview" src="{{this}}" alt="картинка"> 
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="modal-card-descriptionAll">
                <div class="modal-card--name isHibenTitelTwo">
                    <p class="modal-card--titel">{{this.title}}</p>
                    <p class="modal-card--cod">Код товару | {{this._id}}</p>
                </div>
                    <p class="modal-card--price">{{this.price}} €</p>
                    <div class="modal-card--info">
                        <button class="modal-card--bnInfo" type="button">Информация о продавце</button>
                    </div>
                    
                    <div class="modal-card--isFavorite">
                        <button class="modal-card--buttonIsFavorite" type="button">
                            <span>В избранное</span>
                            <svg class="icon" width="16" height="16">
                                <use class="icon-heart" href="/sprite.5ec50489.svg#icon-heart-wihte"></use>
                                <use class="icon-heart--favorites" href="/sprite.5ec50489.svg#icon-heart"></use>
                            </svg>
                        </button>
                        <button class="modal-card--buttonToShare" type="button">           
                            <span>Поделиться</span>
                            <svg class="icon" width="16" height="16">
                                <use class="icon-heart" href="/sprite.5ec50489.svg#icon-Group"></use>
                            </svg>
                        </button>
                    </div>
                    <div>
                        <p class="modal-card--description">Описание</p>
                        <p class="modal-card--descriptionAll">{{description}}</p>
                    </div>
            </div>
        </div>
        {{/each}}
       
        <button class='modal-close-button' type='button' aria-label='Close modal'>
            <svg class='modal-close-button__icon' width='14' height='14' viewBox='0 0 32 32'>
                <path
                    d='M32 3.223l-3.223-3.223-12.777 12.777-12.777-12.777-3.223 3.223 12.777 12.777-12.777 12.777 3.223 3.223 12.777-12.777 12.777 12.777 3.223-3.223-12.777-12.777 12.777-12.777z'>
                </path>
                {{! <use href='./images/sprite.svg#icon-close'></use> }}
            </svg>
        </button>
    </div>
</div>