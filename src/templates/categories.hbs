{{#each categori}}
<section class="categories">
    <div class="categories__container container">
        <div class="categories__name">
            <h2 class="categories__titel">{{this.name}}</h2>
            <span class="categories__titel--allCard">Смотреть все</span>
        </div>
        <div class="container__card--list">
            <button class="button__arow--left">
                <svg class="icon" width="18" height="18">
                <use href="./img/sprite.svg#icon-arrow_right"></use>
                </svg>
            </button>
                <ul class="categories__card--list">
                    <li class="categories__card">
                        {{{card}}}
                        <ul class="card__poiter--list">
                            <li class="card__poiter active__color"></li>
                            <li class="card__poiter"></li>
                            <li class="card__poiter"></li>
                            <li class="card__poiter"></li>
                        </ul>
                    </li>
                </ul>
            <button class="button__arow-right">
                <svg class="icon" width="18" height="18">
                <use href="./img/sprite.svg#icon-arrow_left"></use>
            </svg></button>
        </div>
    </div>
</section>
{{/each}}